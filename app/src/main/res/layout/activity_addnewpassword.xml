<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addnewpassword"
    android:background="@drawable/anpback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:backgroundTint="#FBFBF8"
        android:background="@drawable/rounded"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PASSWORD"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="70dp"
            android:textStyle="bold"
            android:textColor="#431E51" />
        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:id="@+id/userna"
            android:hint="USERNAME"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:id="@+id/pass"
            android:hint="PASSWORD"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="230dp"
            android:layout_marginTop="50dp">

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/b1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#431E51"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="GENERATE"
                android:id="@+id/b2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:backgroundTint="#431E51"
                android:textColor="#ffffff"/>

        </RelativeLayout>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/botn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:backgroundTint="#B1B1BF"
        app:menu="@menu/menu"/>

</RelativeLayout>